<?xml version="1.0" encoding="utf-8"?>
<layout>
<data>
    <import type="android.view.View"/>
    <variable
        name="workout"
        type="zachg.gsctrainingandnutritiontracker.models.Workout"/>
    <variable
        name="WorkoutListAdapter"
        type="zachg.gsctrainingandnutritiontracker.ui.adapters.WorkoutListAdapter"/>
</data>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rvworkout_item"
    android:background="@android:color/holo_orange_light">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@{workout.exerciseName}"
        android:id="@+id/tvExerciseName" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvReps"
        android:text="@{workout.reps}"
        android:layout_below="@+id/tvExerciseName"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etWeightUsed"
        android:autofillHints="@string/workout_weight"
        android:layout_below="@+id/tvReps"/>

</RelativeLayout></layout>