<?xml version="1.0" encoding="utf-8"?>

<layout>
    <data>
        <import type="android.view.View"/>
        <variable
            name="message"
            type="zachg.gsctrainingandnutritiontracker.models.Message"/>
        <variable
            name="user"
            type="zachg.gsctrainingandnutritiontracker.models.User"/>
        <variable
            name="fragment"
            type="zachg.gsctrainingandnutritiontracker.ui.fragments.InboxFragment"/>
    </data>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rvinbox_item"
    android:background="@android:color/holo_orange_light"
    android:onClick="@{()->fragment.onItemClick(message, user)}">

    <TextView
        android:id="@+id/tvMsgTitle"
        style="@style/user_title"
        android:text="@{message.title}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/tvMsgBody"
        android:text="@{message.body}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <ImageView
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawable="@drawable/ic_check"
        android:layout_marginLeft="100dp"/>

</LinearLayout></layout>