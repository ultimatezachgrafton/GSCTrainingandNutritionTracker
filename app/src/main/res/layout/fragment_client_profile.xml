<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable
            name="report"
            type="zachg.gsctrainingandnutritiontracker.models.Report"/>
        <variable
            name="user"
            type="zachg.gsctrainingandnutritiontracker.models.User"/>
        <variable
            name="fragment"
            type="zachg.gsctrainingandnutritiontracker.ui.fragments.ClientProfileFragment"/>
        <variable
            name="date"
            type="java.util.Date"/>
        <variable
            name="viewmodel"
            type="zachg.gsctrainingandnutritiontracker.viewmodels.ClientProfileViewModel" />
        <variable
            name="handlers"
            type="zachg.gsctrainingandnutritiontracker.handlers.OnClickHandlers"/>

    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvGreeting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:layout_marginBottom="15dp"
            android:text="@{@string/date_greeting(user.ClientName)}"
            android:gravity="center"
            android:textSize="32sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_select_date"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_select_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{@string/select_date}"
            android:gravity="center"
            android:textSize="22sp"
            app:layout_constraintBottom_toTopOf="@+id/cal"
            app:layout_constraintTop_toBottomOf="@+id/tvGreeting" />

        <CalendarView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cal"
            android:onSelectedDayChange="@{()->fragment.onDateSelected(user, date)}"/>

        <Button
            android:id="@+id/bSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="@string/selectReport"
            android:onClick="@{()-> fragment.onDateSelected(user, date)}"/>

</LinearLayout>
</layout>