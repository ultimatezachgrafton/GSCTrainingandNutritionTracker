<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable
            name="user"
            type="zachg.gsctrainingandnutritiontracker.models.User"/>
        <variable
            name="fragment"
            type="zachg.gsctrainingandnutritiontracker.ui.fragments.ClientProfileFragment"/>
        <variable
            name="caldate"
            type="zachg.gsctrainingandnutritiontracker.models.CalDate"/>
        <variable
            name="viewmodel"
            type="zachg.gsctrainingandnutritiontracker.viewmodels.ClientProfileViewModel" />
        <variable
            name="handlers"
            type="zachg.gsctrainingandnutritiontracker.handlers.OnClickHandlers"/>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvGreeting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:layout_marginBottom="15dp"
            android:text="@{@string/date_greeting(user.ClientName)}"
            android:gravity="center"
            android:textSize="32sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_select_date"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_select_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{@string/select_date}"
            android:gravity="center"
            android:textSize="22sp"
            app:layout_constraintBottom_toTopOf="@+id/calendarView"
            app:layout_constraintTop_toBottomOf="@+id/tvGreeting" />

        <DatePicker
            android:id="@+id/datepicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:day="@{caldate.day}"
            android:month="@{caldate.month}"
            android:onDateChanged="@{caldate.dateChanged}"
            android:year="@{caldate.year}"/>

        <Button
            android:id="@+id/bSelectWorkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/datepicker"
            android:text="@string/selectWorkout"
            android:clickable="true"
            android:onClick="@{()-> fragment.getWorkoutSpinner()}" />

</LinearLayout>
</layout>