<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable
            name="user"
            type="zachg.gsctrainingandnutritiontracker.models.User"/>
        <variable
            name="client"
            type="zachg.gsctrainingandnutritiontracker.models.User"/>
        <variable
            name="exercise"
            type="zachg.gsctrainingandnutritiontracker.models.Exercise" />
        <variable
            name="exercise2"
            type="zachg.gsctrainingandnutritiontracker.models.Exercise" />
        <variable
            name="exercise3"
            type="zachg.gsctrainingandnutritiontracker.models.Exercise" />
        <variable
            name="exercise4"
            type="zachg.gsctrainingandnutritiontracker.models.Exercise" />
        <variable
            name="exercise5"
            type="zachg.gsctrainingandnutritiontracker.models.Exercise" />
        <variable
            name="exercise6"
            type="zachg.gsctrainingandnutritiontracker.models.Exercise" />
        <variable
            name="fragment"
            type="zachg.gsctrainingandnutritiontracker.ui.fragments.AdminClientProfileFragment"/>
        <variable
            name="workout"
            type="zachg.gsctrainingandnutritiontracker.models.Workout"/>
        <variable
            name="workoutTitle"
            type="String"/>
        <variable
            name="workoutDay"
            type="String"/>
        <variable
            name="viewmodel"
            type="zachg.gsctrainingandnutritiontracker.viewmodels.AdminClientProfileViewModel"/>
        <variable
            name="bCamera"
            type="android.widget.ImageButton"/>
        <variable
            name="profilePhoto"
            type="android.widget.ImageView"/>
        <variable
            name="addEts"
            type="android.widget.LinearLayout"/>
        <variable
            name="bAddExercise"
            type="android.widget.Button" />
    </data>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/profilePhoto"
                android:background="@android:color/darker_gray" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bCamera"
                android:clickable="true"
                android:src="@android:drawable/ic_menu_camera"
                android:layout_below="@id/profilePhoto"/>

        <Button
            android:background="#696969"
            android:textColor="@android:color/white"
            android:id="@+id/bWriteWorkouts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="write workouts"
            android:layout_below="@id/bCamera"
            android:onClick="@{()->viewmodel.writeToWorkouts(user, exercise, exercise2, exercise3, exercise4, exercise5, exercise6, workoutDay, workoutTitle)}"/>

        <Button
            android:id="@+id/bToDatePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/bWriteWorkouts"
            android:layout_alignBottom="@id/bWriteWorkouts"
            android:background="#696969"
            android:onClick="@{()->fragment.toDatePicker()}"
            android:text="@string/toDatePicker"
            android:textColor="@android:color/white" />

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:background="#525252"
        android:layout_height="match_parent"
        android:id="@+id/exerciseLinearLayout"
        android:layout_below="@id/bToDatePicker">

        <TextView
            android:textColor="@android:color/white"
            android:id="@+id/tvClientName"
            android:text="@{client.clientName}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bCamera" />

        <TextView
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvWorkoutTitle"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etWorkoutTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter workout title"
            android:text="@={workoutTitle}"
            android:textColorHint="@android:color/white"
            android:backgroundTint="@android:color/white"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etDay"
            android:singleLine="true"
            android:hint="@string/enterDay"
            android:textColorHint="@android:color/white"
            android:backgroundTint="@android:color/white"
            android:text="@={workoutDay}"/>

        <TextView
            android:textColor="@android:color/white"
            android:id="@+id/tvExerciseNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exercise"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etExerciseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter name"
            android:inputType="text"
            android:singleLine="true"
            android:textColorHint="@android:color/white"
            android:backgroundTint="@android:color/white"
            android:text="@={exercise.exerciseName}"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etReps"
            android:hint="enter reps"
            android:textColorHint="@android:color/white"
            android:backgroundTint="@android:color/white"
            android:text="@={exercise.reps}"/>

        <TextView
            android:textColor="@android:color/white"
            android:id="@+id/tvExerciseNum2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exercise"
            android:textSize="18sp"
            android:textColorHint="@android:color/white"
            android:backgroundTint="@android:color/white"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etExerciseName2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter name"
            android:inputType="text"
            android:singleLine="true"
            android:textColorHint="@android:color/white"
            android:backgroundTint="@android:color/white"
            android:text="@={exercise2.exerciseName}"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etReps2"
            android:hint="enter reps"
            android:textColorHint="@android:color/white"
            android:backgroundTint="@android:color/white"
            android:text="@={exercise2.reps}"/>

        <TextView
            android:textColor="@android:color/white"
            android:id="@+id/tvExerciseNum3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exercise"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etExerciseName3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter name"
            android:inputType="text"
            android:singleLine="true"
            android:textColorHint="@android:color/white"
            android:backgroundTint="@android:color/white"
            android:text="@={exercise3.exerciseName}"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etReps3"
            android:textColorHint="@android:color/white"
            android:backgroundTint="@android:color/white"
            android:hint="enter reps"
            android:text="@={exercise3.reps}"/>

        <TextView
            android:textColor="@android:color/white"
            android:id="@+id/tvExerciseNum4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exercise"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etExerciseName4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter name"
            android:inputType="text"
            android:singleLine="true"
            android:textColorHint="@android:color/white"
            android:backgroundTint="@android:color/white"
            android:text="@={exercise4.exerciseName}"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etReps4"
            android:hint="enter reps"
            android:textColorHint="@android:color/white"
            android:backgroundTint="@android:color/white"
            android:text="@={exercise4.reps}"/>

        <TextView
            android:textColor="@android:color/white"
            android:id="@+id/tvExerciseNum5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exercise"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etExerciseName5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter name"
            android:inputType="text"
            android:singleLine="true"
            android:textColorHint="@android:color/white"
            android:backgroundTint="@android:color/white"
            android:text="@={exercise5.exerciseName}"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etReps5"
            android:hint="enter reps"
            android:textColorHint="@android:color/white"
            android:backgroundTint="@android:color/white"
            android:text="@={exercise5.reps}"/>
    </LinearLayout>

        <LinearLayout
            android:id="@+id/addEts"
            android:orientation="vertical" android:layout_width="match_parent"
            android:background="#525252"
            android:layout_height="match_parent"
            android:layout_below="@id/bToDatePicker">

        <TextView
            android:textColor="@android:color/white"
            android:id="@+id/tvExerciseNum6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exercise"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etExerciseName6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter name"
            android:inputType="text"
            android:singleLine="true"
            android:textColorHint="@android:color/white"
            android:backgroundTint="@android:color/white"
            android:text="@={exercise6.exerciseName}"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etReps6"
            android:hint="enter reps"
            android:textColorHint="@android:color/white"
            android:backgroundTint="@android:color/white"
            android:text="@={exercise6.reps}"/>

    </LinearLayout>

            <Button
                android:id="@+id/bAddExerciser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/exerciseLinearLayout"
                android:background="#696969"
                android:onClick="@{()->fragment.addLine(exerciseLinearLayout)}"
                android:text="@string/addExercise1"
                android:textColor="@android:color/white" />
    </RelativeLayout>
    </ScrollView>
</layout>